.row
  .span8.offset2.well
    fieldset
      legend = t('titles.new_event')
      = simple_form_for @event, :html => { :class => "form-horizontal" } do |f|
        = f.error_notification

        .form-inputs
          = f.input :title, :input_html => { :class => 'span5' }
          = f.input :compound_start_time, :as => :compound_datetime
          = f.input :compound_end_time, :as => :compound_datetime
          = f.input :location, :input_html => { :class => 'span5' }
          = f.input :content, :input_html => { :rows => 12, :class => 'span5' }
        .form-actions
          = f.button :submit, :class => ['btn', 'btn-info']
          button.btn= t('labels.cancel')
