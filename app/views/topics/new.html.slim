= render 'events/header'
.row
  .span8
    = simple_form_for @topic, url: event_topics_path(@event), html: { class: "form-horizontal" } do |f|
      = f.error_notification
      .form-inputs
        = f.input :title, input_html: { class: 'span5' }
        = f.input :body , input_html: { class: 'span5', rows: 18 }
      .form-actions
        = f.button :submit, class: 'btn-info'
  .span4
